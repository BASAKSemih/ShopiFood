{% extends 'base.html.twig' %}

{% block title %}{{ restaurant.name }} {% endblock %}

{% block body %}
    {% if menus %}
        <section class="section-products">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="header">
                            <h2>Vos menus disponnible</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {% for menu in menus %}
                        <div class="col-md-6 col-lg-4 col-xl-3 menus">
                            <div id="product-1" class="single-product">
                                <div class="part-1">
                                    <img src="/uploads/menus/{{ menu.imageFileName }}" alt="{{ menu.name }}" class="">
                                        <span class="discount">PROMOTION</span>
                                    <ul>
                                        <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
                                        <li>
                                            <a href="#"><i class="fas fa-info"></i></a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="part-2">
                                    <h3 class="product-title">{{ menu.name }}</h3>
                                    <h4 class="product-price">{{ menu.price }} â‚¬</h4>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

    {% endif %}

{% endblock %}